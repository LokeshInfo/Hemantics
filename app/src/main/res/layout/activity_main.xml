<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="7pt"
                android:text="Variable"
                />

            <EditText
                android:id="@+id/ed_var"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textAlignment="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="7pt" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="7pt"
                android:text="Value"
                />

            <EditText
                android:id="@+id/ed_value"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAlignment="center"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:textSize="7pt"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/b_add"
        android:layout_width="50pt"
        android:layout_height="40dp"
        android:text="Add"
        android:layout_below="@+id/lyt1"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_allvals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="6pt"
        android:textColor="@android:color/black"
        android:layout_below="@+id/b_add"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:gravity="center"
        />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.77dp"
                android:background="@android:color/black"
                android:layout_below="@+id/tv_allvals"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="7pt"
                android:layout_centerHorizontal="true"
                android:text="Cryptoraphy"
                android:layout_below="@+id/line"
                android:layout_marginTop="12dp"
                />


            <EditText
                android:id="@+id/ed_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:singleLine="true"
                android:layout_below="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="18pt"
                android:layout_marginRight="18pt"
                android:textSize="7pt" />


            <Button
                android:id="@+id/b_cryp"
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:text="Show"
                android:layout_below="@+id/ed_enter"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                />



            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="9pt"
                android:layout_below="@+id/b_cryp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>