<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        >

        <LinearLayout
            android:id="@+id/lyt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="10pt"
                android:text="Data Encryption"
                android:textAlignment="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                >

            <EditText
                android:id="@+id/ed_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:textSize="8pt"
                android:hint="Enter Code here"
                android:layout_toLeftOf="@+id/ic_vcopy"
                />

                <ImageView
                    android:id="@+id/ic_vcopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_copy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10pt"
                    android:layout_marginTop="10dp"
                    android:text="Answer Here"
                    android:textAlignment="center"
                    android:layout_toLeftOf="@+id/ic_vlcopy"
                    />

                <ImageView
                    android:id="@+id/ic_vlcopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_copy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/b_add"
            android:layout_width="50pt"
            android:layout_height="40dp"
            android:text="Encrypt"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/lyt1"
            />

        <TextView
            android:id="@+id/tvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="7pt"
            android:text="Variable Already Exists in Database \n Please Delete or Update"
            android:textAlignment="center"
            android:layout_below="@+id/b_add"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:visibility="gone"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>